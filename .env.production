# ===========================================
# API Marketplace Platform - VPS Production Config
# ===========================================
# VPS IP: 103.77.173.186
# Copy this file to .env on your VPS

# ===========================================
# Environment
# ===========================================
NODE_ENV=production

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-db-password-here
POSTGRES_DB=api_marketplace

# Database URL (Docker internal)
DATABASE_URL=postgresql://postgres:your-strong-db-password-here@postgres:5432/api_marketplace?schema=public

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# Backend Server Configuration
# ===========================================
PORT=3000

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
JWT_EXPIRES_IN=86400

# ===========================================
# Frontend Configuration
# ===========================================
# VPS URL
FRONTEND_URL=http://103.77.173.186
VITE_API_URL=http://103.77.173.186

# ===========================================
# Encryption
# ===========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_BYTE_HEX_KEY

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info

# ===========================================
# Proxy Settings
# ===========================================
TRUST_PROXY=1

# ===========================================
# CLI Proxy Integration
# ===========================================
# URL của CLI Proxy hiện tại (cho iframe trong admin panel)
VITE_CLI_PROXY_URL=http://103.77.173.186:3000/cliproxy/control-panel

# ===========================================
# First Admin User
# ===========================================
# Set to true to make the first registered user an admin
FIRST_USER_IS_ADMIN=true

