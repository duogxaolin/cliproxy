# ===========================================
# API Marketplace Platform - VPS Production Config
# ===========================================
# VPS IP: 103.77.173.186
# Copy this file to .env on your VPS

# ===========================================
# Environment
# ===========================================
NODE_ENV=production

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-db-password-here
POSTGRES_DB=api_marketplace

# Database URL (Docker internal)
DATABASE_URL=postgresql://postgres:your-strong-db-password-here@postgres:5432/api_marketplace?schema=public

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# Port Configuration
# ===========================================
# Backend API server port (default: 4567)
BACKEND_PORT=4567
PORT=4567

# Frontend server port (default: 4568)
FRONTEND_PORT=4568

# CLI Proxy port (default: 4569)
CLI_PROXY_PORT=4569

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
JWT_EXPIRES_IN=86400

# ===========================================
# Frontend Configuration
# ===========================================
# VPS URL with new ports
FRONTEND_URL=http://103.77.173.186:4568
VITE_API_URL=http://103.77.173.186:4567

# ===========================================
# Encryption
# ===========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_BYTE_HEX_KEY

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info

# ===========================================
# Proxy Settings
# ===========================================
TRUST_PROXY=1

# ===========================================
# CLI Proxy Integration
# ===========================================
# URL cá»§a CLI Proxy (cho iframe trong admin panel)
VITE_CLI_PROXY_URL=http://103.77.173.186:4569

# ===========================================
# First Admin User
# ===========================================
# Set to true to make the first registered user an admin
FIRST_USER_IS_ADMIN=true

